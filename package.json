{
  "name": "osint-recon",
  "version": "1.0.0",
  "description": "Ethical OSINT reconnaissance platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "worker"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:worker",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:worker": "cd worker && npm install",
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "build": "npm run build:frontend && npm run build:backend && npm run build:worker",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:worker": "cd worker && npm run build",
    "test": "npm run test:backend && npm run test:worker && npm run test:frontend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:worker": "cd worker && npm test",
    "test:integration": "cd tests && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend && npm run lint:worker",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:worker": "cd worker && npm run lint",
    "format": "npm run format:frontend && npm run format:backend && npm run format:worker",
    "format:frontend": "cd frontend && npm run format",
    "format:backend": "cd backend && npm run format",
    "format:worker": "cd worker && npm run format",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules worker/node_modules frontend/dist backend/dist worker/dist"
  },
  "keywords": [
    "osint",
    "reconnaissance",
    "security",
    "ethical-hacking",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "OSINT Recon Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0"
  }
}